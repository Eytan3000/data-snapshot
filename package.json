{
  "name": "data-snapshot",
  "displayName": "Data Snapshot",
  "publisher": "EytanKrief",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Eytan3000/data-snapshot"
  },
  "description": "Capture debug snapshots and generate TypeScript replay harnesses",
  "version": "0.0.2",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "data-snapshot.captureVariable",
        "title": "Data Snapshot: Capture Selected Variable",
        "icon": "$(add)"
      },
      {
        "command": "data-snapshot.listSnapshots",
        "title": "Data Snapshot: List Snapshots"
      },
      {
        "command": "data-snapshot.deleteSnapshot",
        "title": "Data Snapshot: Delete Snapshot"
      },
      {
        "command": "data-snapshot.deleteAll",
        "title": "Data Snapshot: Delete All Snapshots"
      },
      {
        "command": "data-snapshot.removeStubs",
        "title": "Data Snapshot: Remove All Stubs"
      }
    ],
    "menus": {
      "debug/toolBar": [
        {
          "command": "data-snapshot.captureVariable",
          "when": "inDebugMode"
        }
      ],
      "editor/context": [
        {
          "command": "data-snapshot.captureVariable",
          "when": "inDebugMode && editorHasSelection",
          "group": "debug"
        }
      ],
      "view/item/context": [
        {
          "command": "data-snapshot.deleteSnapshot",
          "when": "view == data-snapshot.snapshotsView && viewItem == snapshot"
        }
      ],
      "view/title": [
        {
          "command": "data-snapshot.deleteAll",
          "when": "view == data-snapshot.snapshotsView"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "data-snapshot",
          "title": "Data Snapshot",
          "icon": "$(history)"
        }
      ]
    },
    "views": {
      "data-snapshot": [
        {
          "id": "data-snapshot.snapshotsView",
          "name": "Snapshots"
        }
      ]
    },
    "configuration": {
      "title": "Data Snapshot",
      "properties": {
        "data-snapshot.maxDepth": {
          "type": "number",
          "default": 5,
          "description": "Maximum recursion depth when serializing nested variables"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -watch -p tsconfig.json",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
