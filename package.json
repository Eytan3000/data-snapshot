{
  "name": "debug-replay",
  "displayName": "Debug Replay",
  "publisher": "EytanKrief",
  "description": "Capture debug snapshots and generate TypeScript replay harnesses",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "debug-replay.captureVariable",
        "title": "Capture Selected Variable",
        "icon": "$(add)"
      },
      {
        "command": "debug-replay.listSnapshots",
        "title": "List Snapshots"
      },
      {
        "command": "debug-replay.deleteSnapshot",
        "title": "Delete Snapshot"
      },
      {
        "command": "debug-replay.deleteAll",
        "title": "Delete All Snapshots"
      },
      {
        "command": "debug-replay.removeStubs",
        "title": "Debug Replay: Remove All Stubs"
      }
    ],
    "menus": {
      "debug/toolBar": [
        {
          "command": "debug-replay.captureVariable",
          "when": "inDebugMode"
        }
      ],
      "editor/context": [
        {
          "command": "debug-replay.captureVariable",
          "when": "inDebugMode && editorHasSelection",
          "group": "debug"
        }
      ],
      "view/item/context": [
        {
          "command": "debug-replay.deleteSnapshot",
          "when": "view == debug-replay.snapshotsView && viewItem == snapshot"
        }
      ],
      "view/title": [
        {
          "command": "debug-replay.deleteAll",
          "when": "view == debug-replay.snapshotsView"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "debug-replay",
          "title": "Debug Replay",
          "icon": "$(history)"
        }
      ]
    },
    "views": {
      "debug-replay": [
        {
          "id": "debug-replay.snapshotsView",
          "name": "Snapshots"
        }
      ]
    },
    "configuration": {
      "title": "Debug Replay",
      "properties": {
        "debug-replay.maxDepth": {
          "type": "number",
          "default": 5,
          "description": "Maximum recursion depth when serializing nested variables"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -watch -p tsconfig.json",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
